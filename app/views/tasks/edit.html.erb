<h1>Edit task</h1>
<%= form_with(model: @task, local: true) do |t| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> cayn't save this 
            article on account of:
      </h2>
      <ol>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ol>
    </div>
  <% end %>

  <p>
    <%= t.label :day %><br>
    <%= t.text_field :day %>
  </p>

  <p>
    <%= t.label :duty %><br>
    <%= t.text_field :duty %>
  </p>

  <p>
    <%= t.label :description %><br>
    <%= t.text_area :description %>
  </p>

  <p>
    <%= t.submit %>
  </p>

<% end %>

<%= link_to "See All", tasks_path %>


